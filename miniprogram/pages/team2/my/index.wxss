.hh-switch-item {
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: var(--white);
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.2rpx solid lightgray ;
}

.hh-switch-item::after{
  top: 0;
right: 30rpx;
bottom: 0;
display: block;
width: 30rpx;
height: 30rpx;
font-size: 34rpx;
font-family: "cuIcon";
line-height: 30rpx;
}


.page_hd{
  margin-bottom: 50rpx;
}
.hh-user-profile{
  width: 100%;
  flex: none;
}
.hh-menu-list {
  margin-top: 0rpx;
}
.no_login{
  display: flex;
  flex-direction: row;
  flex: none;
  align-items: center;
}
.no_login_logo{
  width: 230rpx;
  height: 200rpx;
}
.no_login_text{
  background-color: white;
  font-size: large;
}
.login_button{
  background-color: white;
}
.Coin {
  display: flex;
  flex-direction: row;
  /*margin-top: 10rpx;*/
  /**padding: 20rpx;**/
}

.exp_bar {
  display:flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.expBar {
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: #E0E3DA;
  border-left-width: 2rpx;
  border-left-style: solid;
  border-left-color: #E0E3DA;
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: #E0E3DA;
  border-top-left-radius: 10%;
  border-bottom-left-radius: 10%;
  margin-top: 10rpx;
  /*background-color:burlywood ;*/
  background-color:rgb(164, 164, 236);
}

.expBar_bg {
  border-top-width: 2rpx;
  border-top-style: solid;
  border-top-color: #E0E3DA;
  border-right-width: 2rpx;
  border-right-style: solid;
  border-right-color: #E0E3DA;
  border-bottom-width: 2rpx;
  border-bottom-style: solid;
  border-bottom-color: #E0E3DA;
  border-top-right-radius: 10%;
  border-bottom-right-radius: 10%;
  margin-top: 10rpx;
  background-color: white;
}

.expFont {
  font-size: small;
  color: white;
  margin-left: 10rpx;
  margin-top: 8rpx;
}